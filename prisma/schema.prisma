generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = "file:./dev.sqlite"
}

model Product {
  id        String   @id @default(cuid())
  isFeatured Boolean @default(false)
  title     String
  description String
  availableSizes String @default("XS,S,M,L,XL,XXL")
  gender String @default("Men,Women,Unisex")
  price     String
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

